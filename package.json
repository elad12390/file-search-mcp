{
  "name": "file-search-mcp",
  "version": "0.0.3",
  "description": "A blazingly fast MCP server for searching files in large codebases and monorepos. Features glob search, ripgrep-powered content search, fuzzy find, and directory tree visualization.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "file-search-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "metrics": "tsx scripts/view-metrics.ts",
    "metrics:raw": "tsx scripts/view-metrics.ts --raw",
    "metrics:clear": "tsx scripts/view-metrics.ts --clear",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "file-search",
    "grep",
    "ripgrep",
    "monorepo",
    "code-search",
    "fuzzy-find",
    "fzf",
    "claude",
    "ai",
    "llm"
  ],
  "author": "Elad Ben Haim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elad12390/file-search-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/elad12390/file-search-mcp/issues"
  },
  "homepage": "https://github.com/elad12390/file-search-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fast-glob": "^3.3.2",
    "fzf": "^0.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
